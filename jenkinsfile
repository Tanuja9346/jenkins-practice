// Jenkinsfile (Declarative Pipeline)
pipeline {
     agent { node { label 'agent' } }   
    //  options {
    //      ansicolor('xterm')   
    // }
    
      environment { 
        USER = 'sivakumar'
     }    
      
                              //any                             
      stages {
        stage('Build') {
            steps {
                echo 'Building..'
                
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        
        
        }
        
               
       
       
    }
       post { 
          always { 
            echo 'i will always run whether job is not'
        }
        success {
            echo 'i will run only job is sucess'
        }
        failure {
            echo 'i will run when failure'
        }
       }


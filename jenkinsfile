// Jenkinsfile (Declarative Pipeline)
pipeline {
    agent agent { node { label 'agent-1' } }                                                  //any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
// Jenkinsfile (Declarative Pipeline)
pipeline {
     agent { node { label 'AGENT-1' } }                                               //any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}